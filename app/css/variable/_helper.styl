.clear
	clear both

.align-image-center
	text-align center

// Add this class to an image to make it fit within it's fluid parent wrapper while maintaining
// aspect ratio.
.fluid-image
	max-width 100%
	height auto
	display block

// Utilities

.f-left
	float left

.f-right
	float right

.f-none
	float none

.type--up
	up()

.type--italy
	font-style italic

.type--center
	text-align center

.type--left
	text-align left

.type--right
	text-align right

.disabled
	cursor default
	opacity .5
	pointer-events none

// Hide visually and from screen readers

.hidden
	display none !important

.show
	display block !important

.invisible
	visibility hidden

.all-page__el
	+below(768px)
		width: 100%
		margin-bottom: 20px
	width 32%
	padding 5px
	bsh()
	margin-bottom 30px

.all-page
	flex(mid)
	fw()

.elements-hr
	margin: 40px 0
	display: block
	height: 1px
	border-bottom:1px solid #d1d1d1

.all-page__title
	up()
	font-weight 	700
	text-align center
	padding 10px
	font-size 14px
	color black

.old-browser
	background grey
	width 100%
	height 100vh
	padding-top 200px

.all-page-color
	f()
	fw()
.all-page-color__el
	margin: 20px

.all-page-color__block
	size 100px
	br(10px)
	margin-bottom: 10px

.all-page-color__el-name
	text-align: center
	font-size: 14px
	font-weight: 700

.old-browser-text
	text-align center
	color white
	font-size 20px

.element-list-svg
	flex(mid)
	fw()

.element-list-svg__icon
	width: 12%
	margin: 20px 0
	flex(mid)
	fl()
	.icon-el
		margin-bottom: 10px
		size 25px

.clearfix
	zoom 1
.clearfix:before,
.clearfix:after
	content ""
	display table
.clearfix:after
	clear both

@-webkit-keyframes slideInDown {
	from {
		transform: translate3d(0, -100%, 0);
		visibility: visible;
	}
	to {
		transform: translate3d(0, 0, 0);
	}
}


@keyframes slideInDown {
	from {
		transform: translate3d(0, -100%, 0);
		visibility: visible;
	}

	to {
		transform: translate3d(0, 0, 0);
	}
}


