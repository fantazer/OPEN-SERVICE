$weigh-light = 300
$weigh-normal = 400
$weigh-bold = 700

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

.type--main
	typeSize(16,14)

// Typography-type
//
//.type--italy  - font type italy
//.type--mid  - font type center
//.type--bold - font type bold
//
// Markup:
// <span class="{{modifier_class}}">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos, quidem!</span>
//
// Styleguide 2.2	

.type--up
	up()
.type--italy
	font-style italic
.type--mid
	text-align center
.type--bold
	font-weight $weigh-bold 
a
	text-decoration none
	color $link-color
	
a:hover
	text-decoration none
	color  $link-color-hover
	
