btnStyle(bg-btn,color-btn)
	background bg-btn
	color color-btn
	border 1px solid color-btn
	&:hover
		background darken(bg-btn,20)
		color color-btn

btnStyleLight(br-btn,color-btn)
	color color-btn
	border br-btn solid color-btn
	&:hover
		color darken(color-btn,20)
		border br-btn solid darken(color-btn,20)
		
.btn
	up()
	br(4px)
	tr(all)
	display inline-block
	margin-bottom 20px
	border 1px solid black
	padding 5px 10px
	background none
	&:hover
		cursor pointer
		
.btn--sm
	@extend .btn
	font-size 10px
	padding 5px 10px
	
.btn--md
	@extend .btn
	font-size 12px
	padding 10px 20px
	
.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--green
	@extend .btn
	btnStyle(green,white)
	
.btn--green-light
	@extend .btn
	btnStyleLight(1px,green)
	
button
	font-family $v-font

