		display: none
	position: absolute
	height: 1px
	background: $border-color
	width: 100%
	bottom -1px

.chart-line--left-top
	transform-origin: top left;
	transform rotate(40deg)
	right -100%

.chart-line--left-bottom
	transform-origin: top left;
	transform rotate(-40deg)
	right -100%

.chart-line--right-top
	transform-origin: top right
	transform rotate(-40deg)
	left -100%
.chart-line--right-bottom
	transform-origin: top right
	transform rotate(40deg)
	left -100%

.chart-line--center
	transform-origin: top right
	transform rotate(90deg)
	right 50%
	bottom 0

