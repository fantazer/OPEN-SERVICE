@import 'rupture'
@import "variable/_function.styl"
@import "variable/_fonts.styl"
@import "variable/_ie.styl"
@import "icon/sprite.css"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/_elements.styl"
@import "variable/_constant.styl"
//@import "variable/_grid.styl"
@import "../module/**/*"

rupture.scale = 0 480px 768px 992px 1200px
rupture.scale-names = 'xs' 'sm' 'md' 'lg'

// Grid breakpoints
$breakpoints = {
	'xs' :  0,
	'sm' : 480px,
	'md' : 768px,
	'lg' : 992px,
	'xl' : 1200px
}

// Number of columns
$columns = 12

init($breakpoints, $columns)

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1200px,10px)

.main-section-filter
	position: absolute
	top: 0
	left: 0
	background-color #000000
	background-image linear-gradient(to left, #751540 0%, #21539f 100%)
	opacity 0.8
	width: 100%
	height: 100%
	

.main-section
	width: 100%
	height: 720px
	background: rgba(0, 0, 0, 0.61)
	position: relative
	flex(mid)
	background-attachment fixed
	background-repeat: no-repeat
	bg-full()

.main-section-cont
	position: relative

.header
	position: absolute
	top 0
	left: 0
	width: 100%
	z-index 50

.header-logo
	width: 18%


.header-cont
	flex(between)
	padding: 25px 0


.header-info
	flex(between)
	width: 36%
//.header-info__el 

.header-info__text
	color rgba(255, 255, 255, 0.4)
	margin-bottom: 10px
	cp()

.header-info__numb
	@extend .type--xlg
	color white

.header-info__toggle
	position: relative
	width: 180px

.header-info__text--town
	color $blue
	display: inline-block
	.icon
		size 8px
		fill $blue

.header-info__sub
	position: absolute
	background: white
	br(5px)
	width: 255px
	z-index 5
	display: none


.header-info__sub-title
	border-bottom:1px solid $border-color
	text-align: center
	padding: 20px
	font-size: 18px
	color black

.header-info__sub-el
	display: block
	color  black
	border-bottom:1px solid $border-color
	padding: 15px 25px
	text-align: left
	tr(all)
	&:last-child
		border-bottom:0
	&:hover
		color $blue
		padding-left: 30px
.header-top
	border-bottom 1px solid rgba(255, 255, 255, 0.15)

.header-get
	flex(between)
	width: 38%
.header-get__el
	@extend .btn--md
	@extend .btn--light-dark
	padding: 15px 20px
	.nav-icon
		margin-left: 0
	.icon
		size 15px
		fill $blue
//.btn--icon
//.nav-icon 
//.sub-header 
.main-section-slogan
	flex(mid)
	fl()
	position: relative
	z-index 5
	margin-top: 3%

.main-section-title
	@extend .type--xxl
	color white
	text-align: center
	margin-bottom: 25px

.main-section-text
	width: 620px
	text-align: center
	color white
	line-height: 1.8
	margin-bottom: 55px

.main-section-get
	flex(mid)

.main-section-get__el
	@extend .btn--md
	@extend .btn--light-dark
	margin-right: 20px

.main-section-get__el-mark
	@extend .btn--md
	@extend .btn--mark

.sub-header__wrap
	flex(between)

.sub-header__el
	padding-top: 25px
	width: 100%
	text-align: center
	up()
	color white
	margin-bottom: 25px


.tools
	transform translateY(-50%)
//.main-cont

.tools-cont
	position: relative

.tools-wrap
	flex(between)
	height: 190px
.tools__el
	flex(mid)
	fl()
	cp()
	padding 35px
	background: white
	width: 24%
	box-shadow 0 20px 24px rgba(0, 0, 0, 0.04)
	border-radius 5px
	color black
	&:hover
		.tools__el-text
			max-height 200px
			transition: max-height 0.45s
		.tools__el-title
			.icon
				display: inline-block
.tools__el-icon
	flex(mid)
	round()
	size 80px
	background: $blue
	margin-bottom: 20px
	.icon
		size 40px
		fill white

.tools__el-title
	@extend .type--xlg
	margin-bottom: 20px
	.icon
		size 15px
		fill $blue
		display: none
.tools__el-text
	transition: max-height 0.35s
	text-align: center
	line-height: 1.8
	max-height: 0
	overflow: hidden

.section
	padding: 70px 0

.section--gray
	background: #f1f6fb

//.section-solution
.section-title
	@extend .type--xl
	text-align: center
	margin-bottom: 35px
//.main-cont

.solution__head-wrap
	border-bottom:1px solid $border-color
	flex(mid)

.solution__head
	flex(between)


.solution__head-el
	cp()
	up()
	padding: 20px
	color #61676d
	&:hover
		color black
		border-bottom:1px solid $red
		margin-bottom: -1px

.solution__cont
	width: 85%
	padding: 50px 0
	margin: 0 auto
	f()
	justify-content: space-between

.solution__cont-img
	flex(mid)
	width: 35%

.solution__cont-info
	width: 65%
	margin-top: 20px

.solution__title
	@extend .type--xlg
	margin-bottom: 25px

.solution__text
	line-height: 1.8
	margin-bottom: 45px

.solution__get
	f()

.solution__get-el
	@extend .btn--md
	@extend .btn--light
	margin-right: 30px

.solution__get-el-mark
	@extend .btn--md
	@extend .btn--mark


.solution
	box-shadow 0 20px 27px rgba(0, 0, 0, 0.09)
	border-radius 5px
	background: white
.tab-head--active
	color black
	border-bottom:1px solid $red
	margin-bottom: -1px
.tab-cont
	position: absolute
	top 0
	left: 0
	z-index: -1
	display: flex
	transition all 4s
	opacity:0
.tab-cont--active
	opacity: 1
	position: relative
	top initial
	left initial
	z-index: 3
	transition all 2s

.section-title--white
	color white

.section--mark
	background-color $blue
	background-image linear-gradient(to left, #a776dd 0%, #5077e7 100%)

.facts-wrap
	flex(between)
	fw()

.facts__el
	width: calc(25% - 14px)
	height: 180px
	color white
	margin-bottom: 20px
	border 1px solid rgba(255, 255, 255, 0.3)
	padding: 30px 35px


.facts__el-title
	@extend .type--lg
	margin-bottom: 20px

.facts__el-text
	width: 65%
	line-height: 1.6

//.section-clients
.client-slider-wrap
	center(980px,10px)
	margin-bottom: 45px
//.client-slider

.client-slider__el
	f()
	br(10px)
	justify-content: space-between
	padding: 40px
	background: white

.client-slider__el-text
	width: 60%
	padding-right: 50px
	line-height: 1.8

.client-slider__el-info
	flex(mid)
	fl()
	width: 40%
	padding: 0 50px
	border-left 1px solid $border-color

.client-slider__el-logo
	margin-bottom: 20px

.client-slider__el-title
	margin-bottom: 20px
	font-size: 18px

.client-slider__el-about
	text-align: center
	margin-bottom: 20px
	line-height:1.8

.client-slider__nav
	flex(mid)

.client-slider__nav-el
	flex(mid)
	cp()
	size 50px
	border 1px solid $border-color
	&:hover
		.icon
			fill darken($blue,10)
	.icon
		size 12px
		fill $blue
		tr(all)

.client-slider__nav-el-left
	border-radius 25px 0 0 25px
//.icon
.client-slider__nav-el-right
	margin-left: -1px
	border-radius 0 25px 25px 0

.btn-row--center
	flex(mid)
	width: 100%


.get-review
	@extend .btn--md
	@extend .btn--light
	background: none
//.section
.section-help
	padding-bottom: 0
	bg-full()
//.main-cont

.help
	flex(between)

.help-info
	width: 35%

.help-info__title
	@extend .type--xl
	line-height: 1.4
	margin-bottom: 30px

.help-info__text
	line-height: 1.8
	margin-bottom: 60px

.help-info__get
	@extend .btn--md
	@extend .btn--mark

.help-img
	width: 45%

//.footer
//.main-cont
.footer-tab
	width: 55%
.footer-wrap
	f()
	justify-content: space-between
	padding: 80px 0
	background: white
.footer__head
	@extend .solution__head
	width: 100%
.footer__head-wrap
	@extend .solution__head-wrap
//.footer__head
.footer__head-el
	@extend .solution__head-el
	padding: 10px 15px
	text-align: center
	width: auto
//.tab-head
//.tab-head--active
	//@extend .solution-head--active
//.footer-info
.footer__cont
	padding: 30px 10px

//.tab-cont
.footer-tab__cont
	width: 100%
	f()
	justify-content: space-between

.footer-tab__info
	padding-right: 50px
	border-right:1px solid $border-color
	width: 40%

.footer__cont-adr__numb
	display: block
	font-size: 18px
	color #6d6d6d
	font-weight bold
	margin-bottom: 15px
	span
		color black!important
.footer__cont-adr__mail
	display: block
	color $blue

.footer__tab-adr
	f()
	align-items: center
	padding-left: 50px
	line-height:1.8
	span
		width: 275px
		display: inline-block
	width: 60%

.footer-help
	width: 20%

.footer-help__title
	@extend .type--xlg
	margin-bottom: 30px

.footer-help__phone
	display: block
	font-weight:700
	color black
	font-size: 18px
	margin-bottom: 20px

.footer-help__mail
	display: block
	color $blue

.footer-soc
	width: 165px

.footer-soc__title
	margin-bottom: 30px
	@extend .type--xlg
.soc__row
	width: 100%
	flex(between)
.footer-soc__el
	&:hover
		.icon
			fill darken($blue,20)
	.icon
		size 20px
		fill $blue
		tr(all)

.footer-sub__wrap
	f()
	justify-content: space-between

.footer-sub
	padding: 50px 0 25px 0
	background: $blue
	background-image linear-gradient(to left, rgba(221, 85, 146, 0.56) 0%, rgba(157, 120, 195, 0.56) 50%, rgba(80, 182, 232, 0.56) 100%)

.footer-sub__info
	width: 25%

.footer-sub__info-title
	color white
	font-size: 18px
	margin-bottom: 25px

.footer-sub__info-link
	color rgba(255, 255, 255, 0.6)
	tr(all)
	&:hover
		color white

.footer-sub__nav
	width: 60%
	flex(between)
	fw()
.footer-sub__nav-el
	margin-bottom: 25px
	width: 25%
	color rgba(255, 255, 255, 0.6)
	tr(all)
	&:hover
		color white

.footer-sub__logo
	width: 100px

.header-info__sub-el--active
	color $blue
	padding-left: 30px

//.section
//.section-config
//.section-title
.section-title-sub
	text-align: center
	color #7b8089
	@extend .type--xlg
	margin-bottom: 70px
//.main-cont
.config
	f()
	justify-content: space-between
	position: relative
.config-col
	width: 32%
//.config-el
.config__head
	f()
	justify-content: space-between
	position: relative
	width: 100%
	padding-bottom: 20px
	border-bottom 1px solid $border-color
	margin-bottom: 30px

.config__toggle
	f()
	align-items: center
.config__toggle-pin
	cp()
	width 40px
	height 20px
	padding: 2px
	border-radius 10px
	background-color $blue
	position: relative
	margin-right: 20px
	span
		round()
		tr(all)
		display: inline-block
		size 16px
		background: white
.config__toggle-pin--active
	background: $gray
	span
		tr(all)
		margin-left: auto
		margin-left: 18px

.config__toggle-text
	@extend .type--xlg

.config__stat
	position: relative

.config__stat-head
	f()
	cp()
	position: relative
	&:before
		content ""
		position: absolute
		width: 100%
		left 0px
		height: 1px
		background: $blue
		bottom -3px
.config__stat-title
	color $blue
	margin-right: 10px
.config__stat-icon
	.icon
		size 12px
		fill $blue

.config-content
	position: relative

.config-title
	typeSize(18,15)
	font-family "Museo Sans Cyrl"
	font-weight bold
	margin-bottom: 15px

.config-text
	line-height:1.8
	margin-bottom: 35px
//.config-link

.config-link__el
	display: inline-block
	color $blue
	&:first-child
		margin-right: 20px

.config-content__filter
	position: absolute
	width: 100%
	height: 100%
	top 0
	left 0
	z-index 10
	display: none

.config-content--active
	.config-title
		color $gray
	.config-text
		color $gray
	.config-link__el
		color $gray
	.config-content__filter
		display: block

.config__tip
	position: absolute
	right: -300px
	background:white
	width: 280px
	box-shadow 0 15px 60px rgba(0, 0, 0, 0.15)
	border-radius 5px
	transform translateY(-50%)
	display: none

.config__tip--show
	display: block

.config__tip-wrap
	padding: 30px
	position: relative

.config__tip-coner
	position: absolute
	size 20px
	background: white
	transform rotate(-45deg)
	left -10px
	top 50%

.config__tip-title
	@extend .type--md
	text-align: center

.config__tip-chart
	size 150px

.config__tip-row
	f()
	justify-content: space-between
	margin-bottom: 10px

.config__tip-color
	width 25px
	height 15px
	border-radius 8px

.config__tip-color--purp
	background-color #7377e3

.config__tip-text
	width:calc(100% - 40px)
	line-height: 1.6
	margin-top: -5px
.config__tip-color--red
	background-color $red


//.config-col-chart