include block_html/_style.pug
include block_html/_include.pug

.header-white
	+header()
.intro-section
	.main-cont
		+bread()
		.intro-section__title Сайт доставки для ресторана, интегрированный с iiko

.main-cont
	.service-info__wrap.service-info__wrap--unborder
		.service-info__card-title.type--mid.type--half Запустить <strong>сайт доставки</strong> для ресторана с возможностью онлайн-оплаты заказа и уникальным дизайном – это <strong>просто и быстро.</strong>
		img(src="img/site-banners.png", alt="")

	.service-info__wrap.service-info__wrap--unborder
		.service-info__card-title.type--mid Для старта проекта нам нужны лишь
		.container.container--three
			.icon-col.icon-col--mid
				img(src="img/phone-ring.svg", alt="")
				span Логотип компании, время работы, контактный телефон
			.icon-col.icon-col--mid
				img(src="img/location-map.svg", alt="")
				span Сумма заказа для бесплатной доставки и районы доставки
			.icon-col.icon-col--mid
				img(src="img/images.svg", alt="")
				span Список блюд, цены и фотографии
	.service-info__wrap.service-info__wrap--unborder
		.service-info__card-title.type--mid.type--half Полная интеграция с учетной системой даст возможность
		.container.container--four
			.icon-col.icon-col--mid
				img(src="img/support.svg", alt="")
				span Принимать заказы с сайта на терминал кассира или в модуль call-центра
			.icon-col.icon-col--mid
				img(src="img/desctop.svg", alt="")
				span Редактировать меню на сайте прямо из учетной системы
			.icon-col.icon-col--mid
				img(src="img/basket.svg", alt="")
				span Делать допродажи при помощи модификаторов
			.icon-col.icon-col--mid
				img(src="img/remove-img.svg", alt="")
				span Использовать стоп-листы для оперативного снятия блюд с продажи
	.service-info__wrap.service-info__wrap--unborder
		.site-info
			.site-info-slider-wrap
				.service-info__card-title.type--mid Примеры сайтов
				.slider-wrap.slider-wrap--simple
					.slider-control.slider-control--left
						+icon("arrow-left","icon")
					.slider-control.slider-control--right
						+icon("arrow-right","icon")
					.site-info-slider.slider-item.slider-single
						.site-info-slider__el
							img(src="img/site-el-1.png", alt="")
							a(href="#").site-info-slider__link
								span Курагадиван
								+icon("arrow-simple-right","icon")
						.site-info-slider__el
							img(src="img/site-el-2.png", alt="")
							a(href="#").site-info-slider__link
								span Курагадиван
								+icon("arrow-simple-right","icon")
						.site-info-slider__el
							img(src="img/site-el-3.png", alt="")
							a(href="#").site-info-slider__link
								span Курагадиван
								+icon("arrow-simple-right","icon")
			.site-info-content
				.title Стоимость
				.site-cost 50 000 р <br> + 5 000 р/мес
				a(href="#").btn--md.btn--mark Оставить заявку
	
.footer-cat
	.main-cont
		.footer-cat-list.footer-cat-list--mid
			-
				var items = [
					{name: 'Выгрузка из iiko в 1С бухгалтерия', val: '1С бухгалтерия'},
					{name: 'Электронный документопровод для ресторанов и поставщиков', val: 'DocsInBox '},
					{name: 'IT-решение по ФГИС “Меркурий” для HoReCa', val: 'DocsInBox.ВЕГАИС  '}
				];
			each item in items
				a(href="#").footer-cat-list__el
					.footer-cat-list__el-text #{item.name}
					.footer-cat-list__el-link #{item.val}
+footer()

include ./block_html/_script.pug
