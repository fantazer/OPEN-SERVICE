include block_html/_style.pug
include block_html/_include.pug

.header-white
	+header()

.intro-section
	.main-cont
		+bread()
		.intro-section__title База знаний
		.knowledge-filter
			.knowledge-filter__el
				.search
					form(action="")
						.search-row
							.search-icon
								+icon("magnifying-glass","icon")
							input(type="text" placeholder="Поиск").input
			.knowledge-filter__el
				.select-beauty--light
					select.select-beauty
						option Все темы
						option Январь
						option Февраль
						option Март


.main-content
	.main-cont
		.knowledge
			.knowledge__el.knowledge__el--light.knowledge__el--sm
				.knowledge__el-title
					span Как
					| исправить сумму заказа или тип оплаты
				a(href="#").btn--md.btn--light Работа приложения
			.knowledge__el.knowledge__el--mark.knowledge__el--md
				.knowledge__el-title
					span Как
					| посмотреть отчет по типам оплат
				.knowledge__el-get
					a(href="#").btn--md.btn--light-dark Часто задаваемые
					a(href="#").btn--md.btn--light-dark Работа приложения

			.knowledge__el.knowledge__el--form.knowledge__el--long#biggerBlock
				form(action="").subscr-form--light.knowledge__form
					.knowledge__el-title Подписаться на статьи
					.subscr-form__row
						input(type="text" placeholder="Ваш Email")
						button(type="submit")
							+icon("arrow-simple-right","icon")
					.check-el
						label.style-label.style-label--checkbox
							input(type="checkbox").sytle-input
							.sytle-input-element
								+icon("checked","icon-check")
							.sytle-input-text Я согласен с условиями обработки персональных данных
			- for (var i=0;i<4;i++)
				.knowledge__el.knowledge__el--light.knowledge__el--sm
					.knowledge__el-title
						span Как
						| исправить сумму заказа или тип оплаты
					a(href="#").btn--md.btn--light Работа приложения
				.knowledge__el.knowledge__el--mark.knowledge__el--md
					.knowledge__el-title
						span Как
						| посмотреть отчет по типам оплат
					.knowledge__el-get
						a(href="#").btn--md.btn--light-dark Часто задаваемые
						a(href="#").btn--md.btn--light-dark Работа приложения
.footer-item
	+footer()

include ./block_html/_script.pug
