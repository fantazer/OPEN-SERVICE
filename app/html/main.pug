// section config
.section.section-config
	.section-title Что даёт автоматизация
	.section-title-sub Выберите отделы для автоматизации и сравните результаты
	.main-cont
		.config
			//chart-column
			.config-col.config-col--one
				//chart-el
				+chartOffice()
				//chart-el
				+chartBar()
				.config-col-mobile
					+chartKichen()
					//chart-el
					+chartGarage()
					//chart-el
					+chartPlace()
			//center-part
			.config-col-chart
				.main-chart
					//circle bar
					.main-chart-wrap
						.main-chart-bar
							.main-chart-cont
								.main-chart-textbox
									.main-chart-val
										.chart-smile
											+icon("smile-good","icon")
										.chart-percent
											span.chart-percent-val 0
											span %
									.main-chart-title Клиенты довольны <br> Прибыль растёт
									.main-chart-text Повышение лояльности к заведению <br> Быстрое, качественное <br> обслуживание
					+chartKichen()
			//chart-column
			.config-col.config-col--three
				//chart-el
				+chartGarage()
				//chart-el
				+chartPlace()
//solution automatic
.section.section-solution.section--gray
	.section-title Решения для автоматизации HoReCa
	.main-cont
		.solution
			.solution__head-wrap
				.solution__head
					-
						var items = [
							'Сеть заведений',
							'Ресторана',
							'Фастфуда',
							'Бара',
							'Кафе',
							'Кофейни',
							'Столовой',
							'Пиццерии',
							'Доставки'
						];
					each item in items
						.solution__head-el.tab-head(class=item== 'Сеть заведений' ? 'tab-head--active' : null) #{item}
			.solution-info
				- for (var i=0;i<9;i++)
					.solution__cont.tab-cont(class=i==0 ? 'tab-cont--active' : null)
						.solution__cont-img
							img(src="img/phone.jpg", alt="")
						.solution__cont-info
							.solution__title Управление рестораном с быстрым обслуживанием #{i}
							.solution__text В iiko — масса полезных инструментов для ресторана быстрого обслуживания: удобные меню-борды, табло статуса заказа, поддержка формата take away, мобильные приложения для гостей, персонала и руководителя и многое другое.
							.solution__get
								.solution__get-el Подробнее
								.solution__get-el-mark Оформить
