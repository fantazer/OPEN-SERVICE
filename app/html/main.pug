//.main-section(style="background-image:url('img/main-baner.jpg')")
.main-section
	.main-section-filter
	+header()
	.main-cont.main-cont-slider
		.main-section-slider-control
			.slider-control__el.slider-control__el--left
				+icon("triangle-arrow-left","icon")
			.slider-control__el.slider-control__el--right
				+icon("triangle-arrow-right","icon")
		.main-section-slider
			- for (var i=0;i<3;i++)
				.main-section-slogan
					.main-section-title Автоматизация ресторанов #{i + 1}
					.main-section-text Мы помогаем управлять бизнесом и финансами, быстро строить и анализировать любые отчеты, сокращать расходы и увеличивать продажи системы iiko
					.main-section-get
						a(href="#").main-section-get__el Выбрать готовый пакет
						a(href="#").main-section-get__el-mark  Бесплатная консультация
